  
   <h3>Create Post</h3>
    <%= form_for :post, class: 'form-horizontal', url: posts_path do |f| %>
      
      <%= f.fields_for :accuser do |accuser_form| %>
        <div class="form-group ">
          <%= accuser_form.label 'Accuser', class: 'col-sm-2 control-label'%>
          <div class="col-sm-6 ">
            <%= accuser_form.text_field :title, class: 'form-control', :placeholder => "The Accuser" %>
          </div>
          <%= accuser_form.fields_for :category do |category_form| %>
            <%= category_form.label 'Accuser Category', class: 'col-sm-2 control-label'%>
            <div class="col-sm-1">
              <%= category_form.collection_select :category_id, Category.all, :id, :title %>
            </div>
          <% end %>
        <% end %>
        </div>
        
        <div class="clearfix"></div>
        <hr>

        <div class="form-group">
        <%= f.fields_for :accused do |accused_form| %>
          <%= accused_form.label 'Accused', class: 'col-sm-2 control-label'%>
          <div class="col-sm-6">
            <%= accused_form.text_field :title, class: 'form-control', :placeholder => "The Accused" %>
            </div>
            <%= accused_form.fields_for :category do |category_form| %>
            <%= category_form.label 'Accused Category', class: 'col-sm-2 control-label'%>
              <div class="col-sm-1">
                <%= category_form.collection_select :category_id, Category.all, :id, :title %>
              </div>
            <% end %>
        <% end %>
      </div>

      <div class="clearfix"></div>
      <hr>

      <div class="form-group">
        <%= f.label :title , class: 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :title, class: 'form-control', :placeholder => "Post Title" %>
        </div>
        <%= f.label 'Date', class: 'col-sm-1 control-label'%>
        <div class="col-sm-3">
          <%= f.text_field  :event_date, class: 'form-control datepicker' %>
        </div>
      </div>  
      <div class="clearfix"></div>
      <hr>
      <div class="form-group">
        <%= f.label :url , class: 'col-sm-2 control-label'%>
        <div class="col-sm-10">
          <%= f.text_field :url, class: 'form-control', :placeholder => "Url Link" %>
        </div>
      </div>
      <div class="clearfix"></div>
      <hr>
      
      <div class="form-group">
        <%= f.label :quote, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :quote, class: 'form-control', :placeholder => "quote" %>
        </div>
      </div>
      <div class="clearfix"></div>
      <hr>
      <div class="form-group">
        <%= f.label :excerpt, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :excerpt, class: 'form-control', :placeholder => "excerpt" %>
        </div>
      </div>
      <div class="clearfix"></div>
      <hr>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Post", class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
<div class="clearfix"></div>
<hr>

