  <% if current_user.id  == @user.id %>
   <h3>Create Post</h3>
    <%= form_for :post, class: 'form-horizontal', url: posts_path do |f| %>
    <div class="form-group">
      <%= f.label :url , class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :url, class: 'form-control', :placeholder => "Url Link" %>
      </div>
    </div>
    <div class="clearfix"></div>
    <hr>
    <div class="form-group">
      <%= f.label :category, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :category, class: 'form-control', :placeholder => "Category" %>
      </div>
    </div>
    <div class="clearfix"></div>
    <hr>
    <div class="form-group">
      <%= f.label :accused, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :accused, class: 'form-control', :placeholder => "accused" %>
      </div>
    </div>
    <div class="clearfix"></div>
    <hr>
    <div class="form-group">
      <%= f.label :accuser, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :accuser, class: 'form-control', :placeholder => "accuser" %>
      </div>
    </div>
    <div class="clearfix"></div>
    <hr>
    <div class="form-group">
      <%= f.label :quote, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :quote, class: 'form-control', :placeholder => "quote" %>
      </div>
    </div>
    <div class="clearfix"></div>
    <hr>
    <div class="form-group">
      <%= f.label :excerpt, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :excerpt, class: 'form-control', :placeholder => "excerpt" %>
      </div>
    </div>


    <div class="clearfix"></div>
    <hr>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Post", class: 'btn btn-primary btn-block' %>
    </div>
  </div>
    <% end %>
<div class="clearfix"></div>
<hr>
<% end %>