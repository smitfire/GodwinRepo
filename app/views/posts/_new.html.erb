    <%= form_for :post, class: 'form-horizontal center', url: posts_path do |f| %>
      
      <div class="form-group">
        <%= f.label 'accuser', class: 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :accuser, class: 'form-control', :placeholder => "Accuser" %>
        </div>
        <%= f.label 'Accuser Category', class: 'col-sm-2 control-label'%>
        <div class="col-sm-1">
          <%= f.collection_select :accuser_category_id, Category.all, :id, :title %>
        </div>
      </div>
      <div class="clearfix"></div>
      
      <div class="form-group">
        <%= f.label 'Accused', class: 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field  :accused, class: 'form-control', placeholder: 'Accused' %>
        </div>
        <%= f.label 'Accused Category', class: 'col-sm-2 control-label'%>
        <div class="col-sm-1">
          <%= f.collection_select :accused_category_id, Category.all, :id, :title %>
        </div>
      </div>  
      
      <div class="clearfix"></div>
      

      <div class="form-group">
        <%= f.label :title , class: 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :title, class: 'form-control', :placeholder => "Post Title" %>
        </div>
        <%= f.label 'Date', class: 'col-sm-1 control-label'%>
        <div class="col-sm-3">
          <%= f.text_field  :event_date, class: 'form-control datepicker' %>
        </div>
      </div>  
      <div class="clearfix"></div>
      
      <div class="form-group">
        <%= f.label :url , class: 'col-sm-2 control-label'%>
        <div class="col-sm-10">
          <%= f.text_field :url, class: 'form-control', :placeholder => "Url Link" %>
        </div>
      </div>
      <div class="clearfix"></div>
      
      
      <div class="form-group">
        <%= f.label :quote, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :quote, class: 'form-control', :placeholder => "quote" %>
        </div>
      </div>
      <div class="clearfix"></div>
      
      <div class="form-group">
        <%= f.label :excerpt, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :excerpt, class: 'form-control', :placeholder => "excerpt" %>
        </div>
      </div>
      <div class="clearfix"></div>
      <hr>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <button id="unshow_post_form" class="btn btn-danger btn-block">Cancel</button>
        </div>
        <div class=" col-sm-10">
        <%= f.submit "Post", class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
<div class="clearfix"></div>
<hr>

