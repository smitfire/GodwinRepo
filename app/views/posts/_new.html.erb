    <%= form_for :post, class: 'form-horizontal center', url: posts_path do |f| %>
      <% f.hidden_field :user_id, value: current_user.id %>
      <div class="form-group">
        <%= f.label 'accuser', class: 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :accuser, required: true, class: 'form-control', :placeholder => "Accuser" %>
        </div>
        <%= f.label 'Accuser Category', class: 'col-sm-2 control-label'%>
        <div class="col-sm-1">
          <%= f.collection_select :accuser_category, Category.all, :id, :title %>
        </div>
      </div>
      <div class="clearfix"></div>
      
      <div class="form-group">
        <%= f.label 'Accused', class: 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field  :accused, required: true, class: 'form-control', placeholder: 'Accused' %>
        </div>
        <%= f.label 'Accused Category', class: 'col-sm-2 control-label'%>
        <div class="col-sm-1">
          <%= f.collection_select :accused_category, Category.all, :id, :title %>
        </div>
      </div>  
      
      <div class="clearfix"></div>
      

      <div class="form-group">
        <%= f.label :url, class: 'col-sm-2 control-label'%>
        <div class="col-sm-6">
          <%= f.text_field :url, required: true, class: 'form-control', :placeholder => "www.post.url" %>
        </div>
        <%= f.label 'Date', class: 'col-sm-1 control-label'%>
        <div class="col-sm-3">
          <%= f.text_field  :event_date, required: true, class: 'form-control datepicker' %>
        </div>
      </div>  
      <div class="clearfix"></div>
          
      
      <div class="form-group">
        <%= f.label :quote, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :quote, required: true, class: 'form-control', :placeholder => "quote" %>
        </div>
      </div>
      <div class="clearfix"></div>
      
      <div class="form-group">
        <%= f.label :context, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :context, required: true, class: 'form-control', :placeholder => "context" %>
        </div>
      </div>
      <div class="clearfix"></div>
      <hr>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <button id="unshow_post_form" class="btn btn-danger btn-block">Cancel</button>
        </div>
        <div class=" col-sm-10">
        <%= f.submit "Post", class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
<div class="clearfix"></div>
<hr>

