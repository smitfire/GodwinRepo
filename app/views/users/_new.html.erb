    <%= form_for :user, class: 'form-horizontal', url: sessions_path do |f| %>
    <div class="form-group">
      <%= f.label :name , class: 'col-sm-2'%>
      <div class="col-sm-10">
        <%= f.text_field :name, :placeholder => "Name" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :email, :placeholder => "enteryour@email.com" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :password, :placeholder => "password" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :password_confirmation, :placeholder => "password confirmation" %>
      </div>
    </div>
    <p>
      <%= f.submit "Signup" %>
      <%= f.submit "Login" %>
    </p>
    <% end %>
